<div class="buttons" style="flex-direction:column;display:flex;align-items:flex-end;">
    {% if issuers is not empty %}
        <div style="margin-bottom:1em">
            <select name="paypro_ideal_issuer" id="paypro_ideal_issuer">
                <option value="" hidden>{{ text_select_your_bank }}</option>
                {% for key,label in issuers %}
                    <option value="{{ key }}">{{ label }}</option>
                {% endfor %}
            </select>
        </div>
    {% endif %}
    <div>
        <input type="button" value="{{ button_confirm }}" id="button-confirm" data-loading-text="{{ text_loading }}" class="btn btn-primary" />
    </div>
</div>
<script type="text/javascript">
    var $button = $('#button-confirm');
    var $issuerSelect = $('#paypro_ideal_issuer');

    $button.on('click', function() {
        $.ajax({
            url: 'index.php?route={{ redirect_route }}',
            data: {
                issuer: $issuerSelect.val()
            },
            dataType: 'json',
            beforeSend: function() {
                $button.button('loading');
            },
            complete: function() {
                $button.button('reset');
            },
            success: function(json) {
                $('.alert-dismissible, .text-danger').remove();
                if (json['redirect']) {
                    location = json['redirect'];
                } else if (json['error']) {
                    $('#collapse-checkout-confirm .panel-body').prepend('<div class="alert alert-danger alert-dismissible" id="error-confirm-checkout">'
                        + json['error']
                        + '<button type="button" class="close" data-dismiss="alert">&times;</button></div>');
                }
            },
            error: function(xhr, ajaxOptions, thrownError) {
                alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
            }
        });
    });

    if ($issuerSelect.length) {
        var handleButtonDisable = function() {
            $button.attr('disabled', $issuerSelect.val() === '');
        };

        $issuerSelect.change(handleButtonDisable);
        handleButtonDisable();
    }
</script>